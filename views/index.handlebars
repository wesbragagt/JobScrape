{{> notes-modal}}
<ul class="collection with-header">
    <li class="collection-header">
        <h4 class="center-align">JobScrape</h4>
        <div class="row center-align">
            <a class="btn waves-effect waves-light" href="/scrape/indeed" name="action">indeed.com
                <i class="material-icons right"></i>
            </a>
            <a class="btn waves-effect orange darken-4" href="/myNotes">myNotes
                <i class="material-icons right"></i>
            </a>
            <a class="btn waves-effect red" href="/deleteAll" name="action">Clear
                <i class="material-icons right"></i>
            </a>
        </div>
    </li>
    {{#each jobs}}
    <li class="collection-item">
        <div>{{this.title}} - {{this.company}}
            <a href="{{this.link}}" class="primary-content">
                <i class="material-icons">send</i>
            </a>
            <button class="secondary-content btn-small halfway-fab waves-effect waves-light teal modal-trigger"
                href="#notes" data-id="{{this._id}}">
                <i class="material-icons">add</i>
            </button>
        </div>
    </li>
    {{/each}}
</ul>