{{> notes-modal}}
<ul class="collection with-header section app-container">
    <li class="collection-header">
        <h4 class="center-align">JobScrape<i class="material-icons">search</i></h4>
        
        <div class="row buttons-row">
            <a class="btn waves-effect waves-light" href="/scrape/indeed" name="action">indeed.com
                <i class="material-icons right"></i>
            </a>
            <a class="btn waves-effect waves-light" href="/scrape/monster" name="action">Monster.com
                <i class="material-icons right"></i>
            </a>
            <a class="btn waves-effect waves-light" href="/scrape/monster" name="action">Glassdoor.com
                <i class="material-icons right"></i>
            </a>

            <a class="btn waves-effect red" href="/deleteAll" name="action">Clear All
                <i class="material-icons right"></i>
            </a>
        </div>
    </li>
    {{#each jobs}}
    <li class="collection-item job-card">
        <div class="job-info">{{this.title}} - {{this.company}}
        </div>
        <span class="btn-behave">
            <a target="_blank" href="{{this.link}}">
                <i class="material-icons">send</i>
            </a>
            <button class="btn-small halfway-fab waves-effect waves-light teal modal-trigger" href="#notes"
                data-id="{{this._id}}">
                <i class="material-icons">comment</i>
            </button>
        </span>
    </li>
    {{/each}}
</ul>